def game_play(starting, ending):
    global step
    
    if ending in track:
        return 'finished'
    
    else:
        Neighbours = find_neighbours(starting)
        matching = table_matching(Neighbours,step,current_cost)
        step += 1
        return game_play(matching, ending)
